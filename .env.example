# .env.example
# Copy this file to .env.local and fill in real local values.
# These values are for LOCAL DEVELOPMENT only.

# Environment
NODE_ENV=development
PORT=3000

# Database (Postgres running in Docker)
# Replace <password> with your local Postgres password (default: p5pass)
DATABASE_URL=postgresql://p5:p5pass@127.0.0.1:55432/p5db?schema=public

# Redis (running in Docker)
REDIS_URL=redis://127.0.0.1:6379

# SMTP (Mailpit, running in Docker)
SMTP_HOST=127.0.0.1
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=

# rate limit (Fastify)
RATE_LIMIT_MAX=100
RATE_LIMIT_TIME_WINDOW=1 minute