{
  "name": "p5",
  "private": true,
  "version": "0.0.1",
  "packageManager": "pnpm@10.15.0",
  "workspaces": [
    "apps/*",
    "prisma"
  ],
  "scripts": {
    "db:up": "docker compose up -d",
    "db:down": "docker compose down -v",
    "db:ps": "docker compose ps",
    "sanity": "pwsh ./scripts/sanity-check.ps1",
    "db:reset": "pwsh ./scripts/db-reset.ps1",
    "prisma:generate": "pnpm --filter @p5/prisma run generate",
    "prisma:migrate": "pnpm --filter @p5/prisma run migrate",
    "prisma:seed": "pnpm --filter @p5/prisma run seed",
    "db:smoke": "pnpm --filter @p5/prisma exec node ./scripts/db-smoke.cjs",
    "snapshot": "pwsh -NoProfile -ExecutionPolicy Bypass ./scripts/make-snapshot.ps1",
    "api": "pnpm --dir apps/api run dev",
    "api:start": "pnpm --dir apps/api run start",
    "test": "pnpm --dir apps/api run test"
  },
  "pnpm": {
    "overrides": {
      "prisma": "5.22.0",
      "@prisma/client": "5.22.0"
    },
    "onlyBuiltDependencies": [
      "@prisma/client",
      "@prisma/engines",
      "esbuild",
      "prisma"
    ]
  },
  "dependencies": {
    "@fastify/jwt": "^10.0.0",
    "@prisma/client": "5.22.0",
    "prom-client": "^15.1.3"
  },
  "devDependencies": {
    "prisma": "5.22.0"
  }
}